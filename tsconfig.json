// E:/programming/next js App/dezinbox/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- Add baseUrl here ---
    "baseUrl": ".", // Tells TypeScript the root directory is the base for path resolution
    // --- Path alias mapping ---
    "paths": {
      "@/*": ["./*"] // Maps "@/" to the root directory (relative to baseUrl)
                     // If your code is in an 'src' folder, use: ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}